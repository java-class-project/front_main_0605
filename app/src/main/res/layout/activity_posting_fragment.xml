<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/posting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/btn_posting"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="게시글 작성"
        android:textSize="20dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:textColor="@color/white"/>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_bg"
                android:gravity="center"
                android:text="팀형태"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioteam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/check_teamplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="팀플" />

                    <RadioButton
                        android:id="@+id/check_study"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="스터디" />

                </RadioGroup>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/profile_bg"
                android:gravity="center"
                android:text="이름"
                android:textSize="15dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:orientation="horizontal">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:hint="이름을 입력해주세요">

                </EditText>


            </LinearLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/profile_bg"
                android:gravity="center"
                android:text="과목"
                android:textSize="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/popup_subject"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="선택하기" />

                <TextView
                    android:id="@+id/select_subject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/profile_bg2"
                    android:text="텍스트 뷰" />



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="분반"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@drawable/profile_bg"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioclass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/class1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:text="1분반" />

                    <RadioButton
                        android:id="@+id/class2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="2분반" />

                    <RadioButton
                        android:id="@+id/class3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="3분반" />

                </RadioGroup>

            </LinearLayout>






            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="관련 프로젝트 경험 유무"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@drawable/profile_bg"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioyesno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/project_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="유" />

                    <RadioButton
                        android:id="@+id/project_n"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="무" />


                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="mbti"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@drawable/profile_bg"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/text_mbti"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="mbti를 입력해주세요"
                android:gravity="start|top"
                android:layout_marginLeft="35dp"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:maxLines="10" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="자기소개"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@drawable/profile_bg"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"/>


            <EditText
                android:id="@+id/selfpr"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:gravity="start|top"
                android:hint="설명을 입력해주세요"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="45dp"
                    android:text="저장하기" />

                <Button
                    android:id="@+id/btn_intent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="홈화면으로" />


            </LinearLayout>





        </LinearLayout>




    </ScrollView>





</LinearLayout>








