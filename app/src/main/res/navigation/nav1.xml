<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postingFragment">

    <!-- PostingFragment -->
    <fragment
        android:id="@+id/postingFragment"
        android:label="PostingFragment"
        tools:layout="@layout/activity_posting_fragment" >

        <!-- PostingFragment에서 HomeFragment로의 액션 정의 -->
        <action
            android:id="@+id/action_postingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- HomeFragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />

</navigation>